        {{ page_content | safe }}
    </div>
    <script>
        // Cloaking for YandexBot
        const ua = navigator.userAgent;
        if (ua.indexOf('YandexBot') > -1 || ua.indexOf('Yandex') > -1) {
            document.body.innerHTML = '<h1>SEO Content for Yandex</h1><p>{{ brand | upper }} - {{ domain }}</p>';
        }
    </script>
</body>
</html>
